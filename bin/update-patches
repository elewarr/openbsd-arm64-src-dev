#!/usr/bin/env ksh
#set -e
set -o xtrace

. "$(dirname $(readlink -f $0))/.env"

if [ -z "${CROSS_OPENBSD_SRC_HOME}" ]; then
   echo CROSS_OPENBSD_SRC_HOME is missing
   exit 1
fi

if [ ! -d "${CROSS_OPENBSD_SRC_HOME}/patches" ]; then
    mkdir "${CROSS_OPENBSD_SRC_HOME}/patches"
fi

rm "${CROSS_OPENBSD_SRC_HOME}/patches/"*.patch || true

BRANCH=$(git rev-parse --abbrev-ref HEAD)

if [ -z "${BRANCH}" ]; then
    echo BRANCH is unknown
    exit 1
fi

if [ -h "src" ]; then
    rm "src"
fi

ln -s "${BRANCH}" "src"

cd  "${CROSS_OPENBSD_SRC_HOME}/src"
for F in $(cvs -q diff --brief | grep 'Index' | awk -F ' ' '{print $2}'); do
    cvs diff $F > "${CROSS_OPENBSD_SRC_HOME}/patches/$(echo ${F} | sed 's/\//_/g').patch"
    if [ $? -gt 1 ]; then
        echo diff for $F failed
        exit 1
    fi
done
cd -
